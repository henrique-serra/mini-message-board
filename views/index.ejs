<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs', { title }) %>
<body>
    <%- include('./partials/nav.ejs') %>
    
    <div class="container">
        <h1>Message Board</h1>
        
        <% if (messages.length === 0) { %>
            <div class="empty-state">
                <h2>No messages yet</h2>
                <p>Be the first to share something with the community!</p>
                <a href="/new" class="btn">Create the first message</a>
            </div>
        <% } else { %>
            <% messages.forEach(({ id, text, username, added }) => { %>
                <div class="message-card">
                    <div class="message-text"><%= text %></div>
                    <div class="message-meta">
                        <div>
                            <div class="message-author">By <%= username %></div>
                            <div class="message-date">Posted <%= added %></div>
                        </div>
                        <div class="message-actions">
                            <a href="/msgs/<%= id %>" class="btn">Read More</a>
                            <form action="/msgs/<%= id %>/delete" method="post" class="delete-form">
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
    
    <%- include('./partials/footer.ejs') %>
</body>
</html>