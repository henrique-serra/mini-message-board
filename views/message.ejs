<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs', { title }) %>
<body>
    <%- include('./partials/nav.ejs') %>
    
    <div class="container">
        <div class="message-detail">
            <div class="message-text"><%= message.text %></div>
            
            <div class="message-detail-meta">
                <h2>Message Details</h2>
                <p><strong>Author:</strong> <%= message.user %></p>
                <p><strong>Posted:</strong> <%= message.added %></p>
            </div>
            
            <div class="mt-32 message-actions">
                <a href="/" class="btn btn-secondary">← Back to Messages</a>
                <form action="/msgs/<%= message.id %>/delete" method="post" class="delete-form">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
    
    <%- include('./partials/footer.ejs') %>
</body>
</html>