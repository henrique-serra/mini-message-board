<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs', { title }) %>
<body>
    <%- include('./partials/nav.ejs') %>
    
    <div class="container">
        <h1 class="form-page-title">Create New Message</h1>
        
        <div class="form-container">
            <form method="POST" action="/new">
                <div class="form-group">
                    <label for="username">Author Name</label>
                    <input type="text" id="username" name="username" required placeholder="Enter your name">
                </div>
                
                <div class="form-group">
                    <label for="text">Message</label>
                    <textarea id="text" name="text" rows="4" required placeholder="What's on your mind?"></textarea>
                </div>
                
                <div class="form-group">
                    <div class="form-buttons">
                        <button type="submit" class="btn">Post Message</button>
                        <a href="/" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <%- include('./partials/footer.ejs') %>
</body>
</html>